.metoceanview-selector
  width 100%
  input
    width 100%
    display inline-block
  .list-container
    position relative
  ul
    z-index 1
    width 100%
    margin-top 0
    background-color white
    padding-top 5px
    padding-bottom 5px
    padding-left 0
    border-left 1px solid black
    border-right 1px solid black
    border-bottom 1px solid black
    position absolute
  li
    padding-left 5px
    padding-right 5px
    list-style-type none
    text-align left
    cursor pointer
  .selected
    background-color #9CF
  .selector-arrow
    display inline-block
    margin-left -17px
    border-style solid
    border-width 5px 5px 2.5px
    border-color #999 transparent transparent
    pointer-events none
